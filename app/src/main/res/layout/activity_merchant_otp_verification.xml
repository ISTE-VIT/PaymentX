<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.merchant.MerchantOtpVerification">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardheader"
        android:layout_width="409dp"
        android:layout_height="90dp"
        app:cardBackgroundColor="@color/header"
        app:layout_constraintBottom_toTopOf="@+id/merchenter_otp_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/merchback"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="8dp"
            android:text="Enter OTP"
            android:textColor="@color/header_text"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/merchback" />
    </androidx.cardview.widget.CardView>

    <!-- Centered Layout for Input Boxes -->

    <TextView
        android:id="@+id/merchenter_otp_text"
        android:layout_width="328dp"
        android:layout_height="47dp"
        android:layout_marginTop="136dp"
        android:text="@string/otp_message"
        android:textColor="@color/default_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/merchinput_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/merchenter_otp_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/merchuid_input1"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:background="@drawable/otp_borderbox"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/merchuid_input2"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:background="@drawable/otp_borderbox"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/merchuid_input1"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/merchuid_input1" />

        <EditText
            android:id="@+id/merchuid_input3"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:background="@drawable/otp_borderbox"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/merchuid_input2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/merchuid_input2"/>

        <EditText
            android:id="@+id/merchuid_input4"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:background="@drawable/otp_borderbox"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/merchuid_input3"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/merchuid_input3"/>

        <EditText
            android:id="@+id/merchuid_input5"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:background="@drawable/otp_borderbox"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/merchuid_input4"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/merchuid_input4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/merchtvDidntReceiveOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Didn't receive the OTP?"
        android:textColor="@color/default_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merchinput_group" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=" Resend."
        android:textColor="@color/default_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/merchtvDidntReceiveOTP"
        app:layout_constraintTop_toBottomOf="@+id/merchinput_group" />

    <Button
        android:id="@+id/merchbtnVerify"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/dark_green"
        android:text="VERIFY"
        android:textColor="@color/btn_text_color"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/merchtvDidntReceiveOTP" />


</androidx.constraintlayout.widget.ConstraintLayout>