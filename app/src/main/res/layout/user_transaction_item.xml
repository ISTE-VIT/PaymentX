<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/transaction_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Name"
            android:textColor="@color/recycler_view_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: â‚¹500"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Completed"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/transaction_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-01-07 12:34:56"
            android:textColor="@color/default_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>