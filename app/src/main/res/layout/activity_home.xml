<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8EC"
    tools:context=".ui.main.HomeActivity">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:src="@drawable/vectorlogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title Text -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2F2F2F"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Subtitle Text 1 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_email_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/user_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#2F2F2F"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp" />

    <!-- Subtitle Text 2 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="#2F2F2F"
        app:layout_constraintTop_toBottomOf="@id/user_email_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="24dp" />

    <!-- SignOut Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/SignOut"
        android:textColor="@color/tertiary"
        android:textSize="15sp"
        android:backgroundTint="#1D5F3E"
        app:strokeColor="#050505"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/user_id_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textColor="@color/tertiary"
        android:textSize="15sp"
        android:backgroundTint="#1D5F3E"
        app:strokeColor="#050505"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/logout_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
