<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.auth.Display">

    <TextView
        android:id="@+id/display_UID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nfc"
        android:textColor="@color/default_text_color"
        android:textSize="22sp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339" />

    <Button
        android:id="@+id/Confirm_button"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/Confirm"
        android:textSize="16sp"
        android:textColor="@color/btn_text_color"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_UID"/>

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="54dp"
        app:cardBackgroundColor="@color/header"
        app:layout_constraintBottom_toTopOf="@+id/display_UID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
